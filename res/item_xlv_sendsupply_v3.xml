<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="11dp">

        <LinearLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/include_topaddress_tv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银川"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/indexright_black"/>

            <TextView
                android:id="@+id/include_topaddress_tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/base_color"
                android:textSize="20sp"
                />
        </LinearLayout>


        <ImageView
            android:visibility="gone"
            android:id="@+id/shanchuhuoyuan"
            android:layout_alignParentRight="true"
            android:src="@drawable/shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="20:30"
            android:textColor="#6e6e6e"
            android:textSize="13sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/city"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="23dp">

            <TextView
                android:id="@+id/item_tv_chechang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="14.2米"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_zhongliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="25.3吨"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_chexing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:text="高栏"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:text="水果"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="#787a7f"
                android:textSize="14sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_siji"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_tv_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已联系司机"
                android:textColor="#6e6e6e"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/item_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1"
                android:textColor="#BB897A"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=">"
                android:layout_marginRight="23dp"
                android:textColor="#6e6e6e"
                android:textSize="13sp"/>


        </LinearLayout>



    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"></View>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tuzhongdingwei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="途中定位"
                android:textColor="#3663b5"
                android:textSize="14sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#efefef"></View>

            <TextView
                android:id="@+id/bianjichongfa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="编辑重发"
                android:textColor="#41a03b"
                android:textSize="14sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#efefef"></View>

            <TextView
                android:id="@+id/lianxidesiji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除"
                android:textColor="#f05b33"
                android:textSize="14sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#efefef"></View>

            <!--<TextView
                android:id="@+id/shanchuhuoyuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除货源"
                android:textColor="#BF2C1D"
                android:textSize="12sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#efefef"></View>-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efefef"></View>

    </LinearLayout>


</LinearLayout>