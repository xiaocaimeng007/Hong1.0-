<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:gravity="left|center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/include_topaddress_iv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/sd"/>

            <TextView
                android:id="@+id/include_topaddress_tv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="西安(陕西)"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/detail_bridge_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/line"/>

            <ImageView
                android:id="@+id/include_topaddress_iv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/zd"/>

            <TextView
                android:id="@+id/include_topaddress_tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/include_topaddress_iv_end"
                android:singleLine="true"
                android:text="杭州(浙江)"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_delete"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/item_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_right_more"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_notice"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>