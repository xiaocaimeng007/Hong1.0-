<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="0dp" android:left="-5dp" android:right="-5dp" android:top="-5dp">
                <shape>
                    <size android:width="70dp" android:height="30dp"></size>
                    <solid android:color="#0000"></solid>
                    <stroke android:width="2dp" android:color="#00B365"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="1dp" android:left="-5dp" android:right="-5dp" android:top="-5dp">
                <shape>
                    <size android:width="70dp" android:height="30dp"></size>
                    <solid android:color="#0000"></solid>
                    <stroke android:width="1dp" android:color="#0000"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>