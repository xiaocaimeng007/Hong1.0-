<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="18dp"
        android:orientation="vertical">

        <com.hongbao5656.view.RoundedImageView
            android:id="@+id/raiv_userphoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="9dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/morentx"/>

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星海物流"
            android:layout_gravity="center"
            android:textSize="12dp"

            />

    </LinearLayout>

    <!--<com.hongbao.view.RoundedImageView
        android:id="@+id/raiv_userphoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/morentx"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/include_topaddress_tv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="银川(宁夏)"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/indexright"/>

            <TextView
                android:id="@+id/include_topaddress_tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#f05b33"
                android:text="银川"
                />

            <TextView
                android:id="@+id/include_topaddress_tv_end_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#f05b33"
                android:text="(宁夏)"
                />

            <!--<include
                layout="@layout/include_topaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"/>-->
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_tv_chechang"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/chechang"
                    android:gravity="center"
                    android:text="12.5米"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_tv_zhongliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/zhongliang"
                    android:gravity="center"
                    android:text="25.3吨"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_tv_chexing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chexing"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="高栏"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/item_tv_goodsname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goodsname"
                    android:gravity="center"
                    android:text="普货"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/item_iv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tellright_selector"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/item_tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注：谁都爱迪斯尼"
                android:textSize="14sp"
                android:textColor="#696969"/>

            <TextView
                android:id="@+id/item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="06-11 20:30"
                android:textSize="13sp"
                android:textColor="#9e9e9e"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>