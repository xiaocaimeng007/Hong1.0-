<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="121dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="120dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <com.hongbao5656.view.RoundedImageView
                android:id="@+id/raiv_userphoto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/morentx"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吴凌云"
                android:layout_gravity="center"
                android:textSize="12dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="司机"
                    />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/indexright"/>

                <TextView
                    android:id="@+id/tv_isdeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="#A1D69E"
                    android:text="交易过"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/include_topaddress_tv_end_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#f05b33"
                    android:text="(宁夏)"
                    />

                <!--<include
                    layout="@layout/include_topaddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="23dp"
                        android:text="2016-06-06 20:35"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/phonecarno"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"

                        android:text="151****1234/沪A35F20"
                        android:textSize="12sp"/>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/zhongliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/zhongliang"
                        android:gravity="center"
                        android:text="25.3吨"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/chexing"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chexing"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="高栏"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 元"
                    android:textColor="#9CCD95"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/item_iv_call"/>

                <ImageView
                    android:id="@+id/item_iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/tellright_selector"
                    android:layout_marginRight="23dp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_hpl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FEC7BB"
                android:text="86%的好评率"/>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_txbj"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="填写报价"
                        android:textColor="#3663b5"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#efefef"></View>

                    <TextView
                        android:id="@+id/tv_jrsc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="加入熟车"
                        android:textColor="#41a03b"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#efefef"></View>

                    <TextView
                        android:id="@+id/tv_dwsj"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="定位司机"
                        android:textColor="#f05b33"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#efefef"></View>



                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"></TextView>

</LinearLayout>