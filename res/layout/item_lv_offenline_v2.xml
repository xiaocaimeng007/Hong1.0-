<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="47dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/include_topaddress_tv_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="西安"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/detail_bridge_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/indexright_black"/>

        <TextView
            android:id="@+id/include_topaddress_tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="杭州"
            android:textColor="@color/base_color"
            android:textSize="20sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_delete"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red"
            android:layout_centerVertical="true"
            android:gravity="center"
            tools:text="99999"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

</RelativeLayout>