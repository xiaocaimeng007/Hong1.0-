<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="11dp">

        <LinearLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/include_topaddress_tv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银川"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/indexright"/>

            <TextView
                android:id="@+id/include_topaddress_tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/base_color"
                android:textSize="16sp"
                />
        </LinearLayout>


        <ImageView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="20:30"
            android:textColor="#6e6e6e"
            android:textSize="13sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/city"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="23dp">

            <TextView
                android:id="@+id/item_tv_chechang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="14.2米"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_zhongliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="25.3吨"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_chexing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:text="高栏"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:text="水果"
                android:textColor="#787a7f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="#787a7f"
                android:textSize="14sp"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/shanchuhuoyuan"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:background="@drawable/shanchu"/>

        </RelativeLayout>



    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"></View>




</LinearLayout>