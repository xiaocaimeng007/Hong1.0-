<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_vpll_adindicator"
        android:layout_width="match_parent"
        android:layout_height="228dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_topad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/ll_vptop_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_vpll_adindicator"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fbhy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@drawable/home_fbhy"/>



            <ImageView
                android:id="@+id/iv_xxdd1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/home_xxdd1"/>

            <ImageView
                android:id="@+id/iv_czcy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/home_czcy"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_kcsb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@drawable/home_kcsb"/>

            <ImageView
                android:id="@+id/iv_cpxl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@drawable/home_cpxl"/>

            <ImageView
                android:id="@+id/iv_xxdd2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/home_xxdd2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>